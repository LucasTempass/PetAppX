<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_height="wrap_content"
    android:layout_width="match_parent"            android:clickable="false"

    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="76dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="12dp"            android:clickable="false"

        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView11">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:clickable="false"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/Bt_Ellipses"
                android:layout_width="32dp"
                android:layout_height="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/more_horizontal_white"
                android:tint="@color/colorSecondary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:clickable="false"

                android:src="@drawable/bell"
                android:visibility="gone"
                android:tint="@color/colorSecondary"
                app:layout_constraintBottom_toBottomOf="@+id/Txt_Alarm"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/txt_name_info" />

            <View
                android:id="@+id/view1"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_marginStart="24dp"
                android:clickable="false"

                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/Txt_Alarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:clickable="false"

                android:layout_marginBottom="20dp"
                android:fontFamily="@font/oswald_light"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="22/05"
                android:textColor="#B6B3B3"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView10" />

            <TextView
                android:id="@+id/Txt_Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:clickable="false"

                android:layout_marginBottom="20dp"
                android:fontFamily="@font/oswald_light"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="@string/TxtAlarmDeactivated"
                android:textColor="#B6B3B3"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView11" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:clickable="false"

                android:src="@drawable/calendar"
                app:layout_constraintBottom_toBottomOf="@+id/Txt_Alarm"
                app:layout_constraintStart_toEndOf="@+id/view1"
                app:layout_constraintTop_toTopOf="@+id/Txt_Alarm" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="12dp"
                android:clickable="false"

                android:layout_height="12dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/clock"
                app:layout_constraintBottom_toBottomOf="@+id/Txt_Alarm"
                app:layout_constraintStart_toEndOf="@+id/Txt_Alarm"
                app:layout_constraintTop_toTopOf="@+id/Txt_Alarm" />

            <TextView
                android:id="@+id/txt_name_info"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="6dp"
                android:clickable="false"

                android:fontFamily="@font/oswald_light"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="Lorem Event"
                android:textColor="#E9A5A4A4"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/view1"
                app:layout_constraintTop_toTopOf="@+id/view1" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>

